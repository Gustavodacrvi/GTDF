<section class='centralizeContent' id='userForms'>
    <div>
        <article class='form card userForm hided' id='addSimpleActionForm'>
            <button class='reset--button user__form__close'><i class='fa fa-times icon close--icon user--icon'></i></button>
            <div>
                <div class='form__element centralizeContent'>
                    <textarea v-model='v.actionData.title' class='textBox' style='height: 41px' placeholder='<%= __("Title") %>...'></textarea>                    
                </div>
                <div class='form__element centralizeContent'>
                    <textarea v-model='v.actionData.description' class='textBox' style='height: 168px' placeholder='<%= __("Description") %>...'></textarea>
                </div>
                <div class='form__element centralizeContent'>
                    <button class='form--button' @click='addAction()'><%= __('Add_action') %></button>
                </div>
            </div>
        </article>
        <article class='form card userForm hided' id='add_changeTags' style='margin-top: 50px'>
            <button class='reset--button user__form__close'><i class='fa fa-times icon close--icon user--icon'></i></button>
            <div>
                <div class='form__element alignContent'>
                    <div class='iconGroup centralizeContent'>
                        <div>
                            <div class='centralizeContent icon--selector' @click='selectTagForm("waiting")' id='waiting' data-title='<%= __("waiting") %>'>
                                <i class="fas fa-hourglass-half icon"></i>
                            </div>
                            <div class='centralizeContent icon--selector'  @click='selectTagForm("maybe")' id='maybe' data-title='<%= __("someday/maybe") %>'>
                                <i class="fas fa-question icon"></i>
                            </div>
                            <div class='centralizeContent icon--selector' @click='selectTagForm("nextAction")' id='nextAction' data-title='<%= __("next_actions") %>'>
                                <i class="fas fa-forward icon"></i>
                            </div>
                            <div class='centralizeContent icon--selector' @click='selectTagForm("calendar")' id='calendar' data-title='<%= __("_calendar") %>'>
                                <i class="fas fa-calendar-alt icon"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div v-if='v.actionData.tag == "calendar"' class='form__element centralizeContent'>
                    <div>
                        <div>
                            <textarea v-model='v.actionData.calendar.date' class='textBox' style='height: 20px' placeholder='<%= __("Date") %>: DD/MM/YYYY'></textarea>
                        </div>
                        <div>
                            <textarea v-model='v.actionData.calendar.time' class='textBox' style='height: 20px' placeholder='<%= __("Hour") %>: HH:MM (<%= __("Optional") %>)'></textarea>
                        </div>
                        <div>
                            <span class='status--alert invalidDate' style='display: none'><%= __('Invalid_date') %>.</span>
                        </div>
                        <div>
                            <span class='invalidTime status--alert' style='display: none'><%= __('Invalid_time') %>.</span>
                        </div>                   
                    </div>
                </div>
                <div class='form__element centralizeContent'>
                    <button class='form--button' @click='editTag()'><%= __('add/edit_tag') %></button>
                </div>
            </div>
        </article>
        <article class='form card userForm hided' id='editAction'>
            <button class='reset--button user__form__close'><i class='fa fa-times icon close--icon user--icon'></i></button>
            <div>
                <div class='form__element centralizeContent'>
                    <textarea v-model='v.actionData.title' class='textBox' style='height: 41px' placeholder='<%= __("Title") %>...'></textarea>
                </div>
                <div class='form__element centralizeContent'>
                    <textarea v-model='v.actionData.description' class='textBox' style='height: 168px' placeholder='<%= __("Description") %>...'></textarea>
                </div>
                <div class='form__element centralizeContent'>
                    <button class='form--button' @click='editAction()'><%= __('Edit_action') %></button>
                </div>
            </div>
        </article>
        <article class='form card userForm hided' id='actionToProject'>
            <button class='reset--button user__form__close' @click='hideAllSelectionBars()'><i class='fa fa-times icon close--icon user--icon'></i></button>
            <div>
                <div class='form__element'>
                    <nav class='selectionBar column' style='height: 260px'>
                        <div class='selectionBar__links row'>
                            <div>
                                <div class='selectionBar--link centralizeContent selectionBar--selected' >
                                    <a><%= __('CREATE') %></a>
                                </div>
                                <div class='selectionBar__content selectionBar__main'>
                                    <span class='selectionBar__element'><%= __('_Create_a_project_with_the_same_name_of_this_action') %></span>
                                    <div class='selectionBar__element checkBox' @click='v.projectData.delete = !v.projectData.delete'>
                                        <span><%= __('delete_action') %><div style='text-align: center'><i class="fas fa-check icon--tiny"></i></div></span>
                                    </div>
                                    <div class='selectionBar__element form__element centralizeContent'>
                                        <button class='form--button' @click='transformActionToProject()'><%= __('Create_project') %></button>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class='selectionBar--link centralizeContent'>
                                    <a><%= __('ADD') %></a>
                                </div>
                                <div class='selectionBar__content hided'>
                                    <span class='selectionBar__element'><%= __('Add_this_action_to_the_selected_project') %></span>
                                    <div class='selectForm form__element' style='margin-top: 10px'>
                                        <div class='selectForm__header'>
                                            <span>{{ v.projectData.title }}</span>
                                        </div>
                                        <div class='selectForm__content hided card'>
                                            <template v-for='j in v.projects.length'>
                                                <span class='text selectForm__element' @click='getDataFromProject(v.projects[j - 1])'> {{ v.projects[j - 1].title }}</span>
                                            </template>
                                        </div>
                                    </div>
                                    <div class='form__element centralizeContent'>
                                        <div>
                                        <span class='text'><%= __('Order') %>:  </span>
                                        <input class='textBox' v-model='v.actionData.project.order' style='height:initial;width:30px'/>
                                        </div>
                                    </div>
                                    <div class='selectionBar__element centralizeContent' >
                                        <button class='form--button' @click='addAlreadyExistingActionToProject()'><%= __('Add_to_project') %></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </article>
