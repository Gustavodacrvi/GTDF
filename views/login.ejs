<!DOCTYPE html>

<html lang='<%= __("lang") %>'>

<head>
    <title>Login</title>
    <% include partials/head %>

    <link rel='stylesheet' href='/css/loginsignup.css' type='text/css'/>
    <link rel='stylesheet' href='/css/login.css' type='text/css'/>
</head>

<body>
    <form method='post' action='/users/login'>
    <div class='loginSignUpBackground'>
        <div class='loginSignUp__formBox'>
            <div class='loginSignUp__title'>
                <h1 class='h1--title'><%= __('loginTitle') %></h1>
            </div>
            <div class='login__input'>
                <div class='loginInput__box'>
                    <div class='loginSignUp__input'>
                        <input class='login--input' autocomplete='off' type='text' name='username' placeholder='<%= __("loginUsername") %>:'/>
                    </div>
                    <div class='loginSignUp__input'>
                        <input class='login--input password' autocomplete='off' type='password' name='password' placeholder='<%= __("loginSignUpPassword") %>:'/>
                        <span class='loginSignUp__eye' onclick='eye.toggleEye()'>
                            <i class="fas fa-eye-slash"></i>
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class='login__submit'>
                <div class='loginSubmit__box'>
                    <div class='loginSubmitBox__info'>
                        <div class='loginSubmitBoxInfo'>
                        <% if (success_msg == "youAreRegistered") { %>
                            <span class='success--status'><%= __('youAreRegistered') %></span>
                        <% } else {%>
                            <span style='opacity: 0'>d</span>
                        <% } %>
                        </div>
                        <div class='loginSubmitBoxInfo'>
                            <input type='checkbox' name='remember'/>
                            <label class='text'><%= __('rememberMe') %></label>
                        </div>
                        <div class='loginSubmitBoxInfo'>
                            <a class='link' href="/signup"><%= __('loginSignUpMessage') %></a>
                        </div>
                    </div>
                    <div class='loginSubmitBox__button'>
                        <div class='loginSubmitBoxButton'>
                            <button class='form--button' type='submit'><%= __('loginEnter') %></button>
                        </div>
                        <div class='loginSubmitBoxButton' style='margin-bottom: 7px'>
                            <button class='form--button' type='submit'><%= __('loginEnterAsGuest') %></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>

    <% include partials/footer %>
    <script src='/js/loginsignup.js'></script>
</body>

</html>